# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

set $sysmenu " [r]estart - [l]ogout - [s]uspend - re[b]oot - po[w]eroff - [ ] lock"
bindsym $mod+Shift+e      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
        bindsym l         exit
        bindsym w         exec "systemctl poweroff"
        bindsym b         exec "systemctl reboot"
        bindsym s         mode "default"; exec "systemctl suspend"
        bindsym Return    mode "default"
        bindsym Escape    mode "default"
        bindsym 0x20      mode "default"; exec "i3lock -c 000000; sleep 5 && xset dpms force off"
}

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Shift+h resize shrink width 90 px or 90 ppt
    bindsym Shift+j resize grow height 90 px or 90 ppt
    bindsym Shift+k resize shrink height 90 px or 90 ppt
    bindsym Shift+l resize grow width 90 px or 90 ppt

# same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
    status_command i3blocks -c ~/.config/i3blocks/conf
        i3bar_command i3bar -t

        font pango:NotoMono 10.3, FontAwesome 10.3
        separator_symbol "|"
        bindsym button4 nop
        bindsym button5 nop
        tray_padding 0

        colors {
            statusline         $accent_text_col
            background         $background_col
            separator          $highlight

            #                      BORDER       BACKGROUND         TEXT
            focused_workspace  $background_col  $highlight         $accent_text_col
            inactive_workspace $background_col  $background_col    $text_col
            active_workspace   $background_col  $background_col    $accent_text_col
            urgent_workspace   $darkred         $background_col    $accent_text_col
            binding_mode       $background_col  $background_col    $accent_text_col
        }
}

